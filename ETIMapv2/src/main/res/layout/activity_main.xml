<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.gd.etimap.MainActivity">


        <RelativeLayout
            android:id="@+id/MapLayoutId"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

        </RelativeLayout>
        <!--<com.qozix.tileview.TileView-->
            <!--android:id="@+id/MapId"-->
            <!--android:layout_width="368dp"-->
            <!--android:layout_height="0dp"-->
            <!--android:layout_weight="1"-->
            <!--tools:layout_editor_absoluteX="0dp"-->
            <!--tools:layout_editor_absoluteY="0dp" />-->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonLeft_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/bLeft" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:id="@+id/buttonUp_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/bUp" />

                <Button
                    android:id="@+id/buttonDown_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/bDown" />
            </LinearLayout>

            <Button
                android:id="@+id/buttonRight_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/BRight" />

        </LinearLayout>
    </LinearLayout>

